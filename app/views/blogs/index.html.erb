<h1>Listing blogs</h1>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td>
      <% 
      show_button = invoke(:deco, :show_button, :locals => {:blog => blog}) do 
         show_button = link_to 'Show', blog 
      end
      %>
      <%= show_button %>
    </td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Blog', new_blog_path %>
